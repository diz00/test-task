{
  "extends": ["airbnb", "prettier", "prettier/react"],
  "plugins": ["prettier"],
  "parser": "babel-eslint",
  "rules": {
    "linebreak-style": ["error", "windows"],
    "arrow-body-style": ["off", "never"],
    "react/jsx-filename-extension": ["off", "never"],
    "no-underscore-dangle": ["off", "never"],
    "react/forbid-prop-types": ["off", "never"],
    "no-console": ["off", "never"],
    "no-alert": ["off", "never"],
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["to", "hrefLeft", "hrefRight"],
        "aspects": ["noHref", "invalidHref", "preferButton"]
      }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  }
}
